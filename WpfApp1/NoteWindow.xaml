<Window x:Class="QuickSticky.NoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#CCFFF7B0"
        ResizeMode="CanResizeWithGrip"
        Width="300" Height="220"
        Padding="8"
        Topmost="False"
        ShowInTaskbar="False"
        Loaded="Window_Loaded"
        LocationChanged="Window_LocationOrSizeChanged"
        SizeChanged="Window_LocationOrSizeChanged"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        KeyDown="Window_KeyDown">
    <Border CornerRadius="12" BorderBrush="#55000000" BorderThickness="1">
        <DockPanel LastChildFill="True" Margin="6">
            <DockPanel DockPanel.Dock="Top" LastChildFill="False" Margin="0,0,0,0">
                <TextBlock Text="Quick Note" FontWeight="Bold" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="180,0,0,0">
                    <Button Content="×" Width="26" Click="Close_Click" ToolTip="Click 3× quickly to delete"/>
                </StackPanel>
            </DockPanel>

            <TextBox x:Name="Editor"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     BorderThickness="0"
                     Background="Transparent"
                     FontFamily="Consolas"
                     FontSize="14"
                     TextChanged="Editor_TextChanged"/>
        </DockPanel>
    </Border>
</Window>